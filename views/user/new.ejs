<form action="/user/create" method="POST" class="form-horizontal form-signin">
	<div class="form-group">
		<div class="col-md-12">
			<h2 class="form-signin-heading"><%= __("New account") %></h2>
		</div>
	</div>

	<% if(flash && flash.err) { %>
		<ul class="alert alert-success">
			<% Object.keys(flash.err ).forEach(function(error) { %>
			<li><%- JSON.stringify(flash.err[error]) %></li>
			<% }) %>
		</ul>
	<% } %>

	<div class="form-group">
		<label for="email" class="col-md-0 control-label sr-only"><%= __("Email") %></label>
		<div class="col-md-12">
			<input type="text" class="form-control" placeholder="<%= __("Email") %>" name="email">
		</div>
	</div>
	<div class="form-group">
		<label for="password" class="col-md-0 control-label sr-only"><%= __("Password") %></label>
		<div class="col-md-12">
			<input type="password" class="form-control" placeholder="<%= __("Password") %>" name="password" id="password">
		</div>
	</div>
	<div class="form-group">
		<label for="confirmation" class="col-md-0 control-label sr-only"><%= __("Password confirmation") %></label>
		<div class="col-md-12">
			<input type="password" class="form-control" placeholder="<%= __("Password confirmation") %>" name="confirmation">
		</div>
	</div>
	<div class="form-group">
		<div class="col-md-12">
			<input type="submit" class="btn btn-lg btn-primary btn-block" value="<%= __("Sign up") %>">
			<input type="hidden" name="_csrf" value="<%= _csrf %>" />
		</div>
	</div>
</form>